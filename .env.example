# Server Configuration
PORT=3001

# Database Configuration
DATABASE_URL=file:jobApp.db

# Environment
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins (use * for development to allow all)
CORS_ORIGIN=http://localhost:5173

# Better Auth Configuration (Essential)
BETTER_AUTH_SECRET=better-auth-secret-123456789  # You should generate a secure random key for production
BETTER_AUTH_URL=http://localhost:${PORT}         # Base URL of your auth server (uses PORT variable)

# Job Scheduler Configuration
# How often the job status scheduler runs to update expired jobs (in milliseconds)
# Default: 86400000 (24 hours)
# For testing/demos, you can use smaller values like:
# - 30000 (30 seconds)
# - 300000 (5 minutes) 
# - 3600000 (1 hour)
JOB_SCHEDULER_INTERVAL_MS=86400000
